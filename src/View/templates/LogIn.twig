{% extends "base.twig" %}
{% block title %} Log in {% endblock %}
{% block head %}
    {{ parent() }}
    <meta charset="UTF-8">
    <title>Sign-Up/Login Form</title>
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">

    <link rel="stylesheet" href={{ asset('register.css', 'css') }}>
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
{% endblock %}
{% block content %}

    <div class="form" id="Rl">
        <div class="tab-content">
            <div id="signup">
                <h1>Bienvenido!</h1>
                <form action="/DBlogin" method="POST">
                    <div class="field-wrap">
                        <label>
                            Nombre o Email<span class="req">*</span>
                        </label>
                        <input type="text"  name="nickname"required autocomplete="off"/>
                    </div>
                    <div class="field-wrap">
                        <label>
                            Contrase√±a<span class="req">*</span>
                        </label>
                        <input type="password"  name="password" required autocomplete="off"/>
                    </div>
                    <button type="submit" class="button button-block" id="comenzar"/>Log In</button>
                </form>
            </div>
            <div id="login">
            </div>
        </div><!-- tab-content -->
    </div> <!-- /form -->
    {% if  message %}
        <div class="form" id="Rl">
            <div class="tab-content">
                <div id="signup">
                    <h1>ERROR!</h1>
                    <h1>
                        Message: {{ message }}
                    </h1>
                </div>
                <div id="login">
                </div>
            </div><!-- tab-content -->
        </div>
    {% endif %}

    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src={{ asset('indexRegistration.js', 'js') }}></script>

{% endblock %}