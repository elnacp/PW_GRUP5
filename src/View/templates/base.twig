<!DOCTYPE html>
<html lang="en">
<head>
    {% block head %}

    <link rel="stylesheet" type="text/css" href="{{ asset('style.css', 'css') }}">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://bootswatch.com/cosmo/bootstrap.min.css">

    <script src="http://code.jquery.com/jquery-git2.min.js" type="text/javascript" ></script>
    <title> {% block title %}{% endblock %} - Dogygram </title>
</head>
{% endblock %}
<body>

{% block nav %}
    {% if(logejat) %}
        <div class="mainbody container-fluid">
            <div class="row">
                <div class="navbar-wrapper">
                    <div class="container-fluid">
                        <div class="navbar navbar-default navbar-static-top" role="navigation">
                            <div class="container-fluid">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                        <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span><span
                                                class="icon-bar"></span><span class="icon-bar"></span>
                                    </button>
                                    <a href="/" class="navbar-brand" > DOGYGRAM </a>

                                </div>
                                <div class="navbar-collapse collapse">
                                    <ul class="nav navbar-nav">
                                        <li><a href="/cerrarSession">Cerrar Sessión</a></li>
                                        <li><a href="/newPost">Nuevo Post</a></li>
                                        <li><a href="/comentaris"><i class="fa fa-envelope-o fa-lg" aria-hidden="true"></i></a></li>
                                        <li><a href="/galeria"><i class="fa fa-picture-o fa-lg" aria-hidden="true"></i></a></li>
                                        <li></span><a href="/notificacions"><i class="fa fa-bell-o fa-lg" aria-hidden="true"></i></a></li>

                                    </ul>
                                    <ul class="nav navbar-nav navbar-right" >
                                        <li ><a href="/edit">
                                    <span class="user-avatar pull-left" >
                                        <img src="{{ image }}" class="img-responsive img-circle" title="John Doe" alt="John Doe" width="30px" height="30px">
                                    </span>
                                                <span class="user-name">
                                                    {{ username }}
                                                </span>
                                                </a>

                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="mainbody container-fluid">
            <div class="row">
                <div class="navbar-wrapper">
                    <div class="container-fluid">
                        <div class="navbar navbar-default navbar-static-top" role="navigation">
                            <div class="container-fluid">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                                        <span class="sr-only">Toggle navigation</span> <span class="icon-bar"></span><span
                                                class="icon-bar"></span><span class="icon-bar"></span>
                                    </button>
                                    <a href="/" class="navbar-brand" > DOGYGRAM </a>

                                </div>
                                <div class="navbar-collapse collapse">
                                    <ul class="nav navbar-nav">
                                        <li><a href="/logIn">Iniciar Sesión</a></li>
                                        <li><a href="/register">Registro</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}


{% endblock %}

<div id="content">{% block content %}{% endblock %}</div>

{% block footer %}
    <!-- /.row -->

    <hr>

    <!-- Footer -->
    <footer class="footer">
        <div class="row">
            <div class="col-lg-12">
                <p> Copyright &copy; Elna Cabot, Noa Durán, Jordi Conesa - Projectes Web 2017</p>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </footer>

{% endblock %}
{% block scripts %}

    <script src="{{ asset('app.js', 'js') }}" type="text/javascript" charset="utf-8"></script>
    <script src="{{ asset('jquery.js', 'js') }}"></script>
    <script src="{{ asset('bootstrap.min.js', 'js') }}"></script>
{% endblock %}
</body>
</html>

