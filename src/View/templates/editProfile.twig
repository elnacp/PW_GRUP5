{% extends "base.twig" %}
{% block title %} Edit Profile {% endblock %}
{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://bootswatch.com/cosmo/bootstrap.min.css">
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href={{ asset('register.css', 'css') }}>
    <link rel="stylesheet" type="text/css" href="{{ asset('editProfile.css', 'css') }}">
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
{% endblock %}
{% block content %}
    <div class="form" id="Ep">
        <div class="tab-content">
            <div id="signup">
                <h1>Edición de Perfil</h1>
                <form action="/DBeditProfile" method="POST" enctype="multipart/form-data" id="registro">
                    <div class="field-wrap">
                        <p class="titulo">Nombre de usuario<span class="req"></span><br></p>
                        <input type="text" id="New_nickname" name="nickname" autocomplete="off" value="{{ username }}" required/>
                    </div>
                    <div class="field-wrap" id="Edad">
                        <br>
                        <p class="titulo">Fecha de Nacimiento<span class="req"  ></span><br></p>
                        <label>
                        </label>
                        <input type="date" id="New_edad" name="edad"  autocomplete="off" value="{{ birthdate }}"/>
                    </div>

                    <div class="field-wrap">
                        <label>
                            Contraseña<span class="req"></span>
                        </label>
                        <input type="password"  id="New_pass" name="password1"  autocomplete="off" required/>
                    </div>
                    <div class="field-wrap">
                        <label>
                            Repite la contraseña<span class="req"></span>
                        </label>
                        <input type="password" id="sure" name="password2"  autocomplete="off" required/>
                    </div>
                    <div class="field-wrap">
                        <label>
                            Imagen Actual<span class="req" id="img_actual"></span>
                        </label>
                        <img src="{{ image }}" name="img_actual" class="img-thumbnail img-responsive">
                    </div>
                    <div class="field-wrap">
                        <label>
                            Imagen de Perfil<span class="req"></span>
                        </label>
                        <br>
                        <br>
                        <img id="newProfilePic" name="image" src="" class="img-thumbnail img-responsive">
                        <input type="file" id="files" name="newProfileImg">
                        <!--<output id="registerImg" name="images"></output>-->

                    </div>
                    <button type="submit" class="button button-block" id="comenzar"/>Comenzar</button>
                </form>
            </div>
            <div id="login">
            </div>
        </div><!-- tab-content -->
    </div> <!-- /form -->

    <script src={{ asset('indexRegistration.js', 'js') }}></script>
    <script src={{ asset('editProfile.js', 'js') }}></script>
{% endblock %}