{% extends "base.twig" %}
{% block title %} Edit Imatge {% endblock %}
{% block head %}
    {{ parent() }}
    <meta charset="UTF-8">
    <title>Sign-Up/Login Form</title>
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href={{ asset('register.css', 'css') }}>
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
{% endblock %}
{% block content %}
    <br>
    <br>
    <div class="form" id="Rp">
        <div class="tab-content">
            <div id="signup">
                <h1>Editar Imagen</h1>
                <form action="/DBeditImage/{{ id }}" method="post" enctype="multipart/form-data" id="registro">
                    <div class="field-wrap">
                        <input type="text" name="title"  value="{{ titol }}" required autocomplete="off"/>
                    </div>
                    <div class="field-wrap">
                        <label>
                            Imagen<span class="req"></span>
                        </label>
                        <br>
                        <br>
                        <div class="field-wrap">
                            <label>
                                Imagen Actual<span class="req" id="img_actual"></span>
                            </label>
                            <img src="{{ actual }}" name="img_actual" class="img-thumbnail img-responsive">
                        </div>
                        <output id="registerImg" name="images"></output>
                        <input type="file" id="files" name="imagen" />
                        <img id="profilePic" name="image" src="" class="img-thumbnail img-responsive">
                        <output id="registerImg"></output>
                        <br>
                        <label>400x300</label>
                        <input class="radio_btn" type="radio" id="imageGran" name="size" value="gran" checked="checked" ></input>
                        <br><br>
                        <label>100x100</label>
                        <input class="radio_btn" type="radio" id="imagePetita" name="size" value="petita" ></input>
                        <br><br>
                        <label>Privada</label>
                        <span class="checkbox">
                            <input  type="checkbox" name="privada"  {{ privada }}>
                        </span>
                    </div>
                    <button type="submit" class="button button-block" />Publicar</button>
                </form>
            </div>
            <div id="login">
            </div>
        </div><!-- tab-content -->
    </div> <!-- /form -->
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src={{ asset('indexRegistration.js', 'js') }}></script>
    <script src={{ asset('editarImatge.js', 'js') }}></script>
{% endblock %}