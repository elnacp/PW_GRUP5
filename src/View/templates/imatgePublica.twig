{% extends "base.twig" %}
{% block title %} Visualitzaci√≥ Imatge {% endblock %}
{% block head %}
    {{ parent() }}
    <link rel="stylesheet" href={{ asset('hello.css', 'css') }}>
    <link rel="stylesheet" href={{ asset('imatgePublica.css', 'css') }}>
{% endblock %}
{% block content %}
    <br>
    <br>


    <div class="[ panel panel-default ] panel-google-plus">
        <div class="image_id" id="{{ id }}"></div>
        <div class="panel-heading">
            <h2>{{ title }}</h2>
            <img class="[ img-circle pull-left ]" src="{{ imgPerfil }}" alt="profile" id="ProfileImg"/>
            <h3>
                <a href="/perfil/{{ autor }}"> {{ autor }} </a>
            </h3>
            <h5><span>Publicat</span> - <span>{{ dia }}</span> </h5>
        </div>

        <div class="panel-footer">
            <img class="img-responsive center-block" src="{{ imgPost }}" id="imgPost"/>
            {% if logejat %}
                <a  href="/like/{{ id }}/{{ usuari_log }}" class="[ btn btn-default ]">Likes: +{{ likes }}</a>
            {% else %}
            <a  class="[ btn btn-default ]">Likes: +{{ likes }}</a>
            {% endif %}
            <a  class="[ btn btn-default ]">Visitas: +{{ visites }}</a>
            <div class="input-placeholder">Add a comment...</div>
        </div>
        {% if logejat %}
        <div class="panel-google-plus-comment">
            <img class="img-circle" src="https://lh3.googleusercontent.com/uFp_tsTJboUY7kue5XAsGA=s46" alt="User Image" />
            <div class="panel-google-plus-textarea">
                <form action="/comentari/{{ id }}/{{ usuari_log }}" method="POST">
                    <textarea rows="4" name="comentari"></textarea>
                    <button type="submit"  class="[ btn btn-success disabled ]"> Comentar</button>
                </form>
                <button type="reset" class="[ btn btn-default ]">Cancel</button>
            </div>
            <div class="clearfix"></div>
        </div>
        {% endif %}
    </div>

    {% if  message %}
        <div class="[ panel panel-default ] panel-google-plus">
            <div class="panel-heading">

                <h3>ERROR! </h3>
                <p>
                    Message: {{ message }}
                </p>

            </div>

        </div>
    {% endif %}

