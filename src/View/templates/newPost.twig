{% extends "base.twig" %}
{% block title %} New post {% endblock %}
{% block head %}
    {{ parent() }}
    <meta charset="UTF-8">
    <title>Sign-Up/Login Form</title>
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href={{ asset('register.css', 'css') }}>
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
{% endblock %}
{% block content %}
    <br>
    <br>
    <div class="form" id="Rp">
        <div class="tab-content">
            <div id="signup">
                <h1>Nuevo Post</h1>
                <form action="/DBnewPost" method="post" enctype="multipart/form-data" id="registro">
                    <div class="field-wrap">
                        <label>
                            TÃ­tulo<span class="req">*</span>
                        </label>
                        <input title="Se necesita un titulo " type="text" name="title" required autocomplete="off"/>
                    </div>
                    <div class="field-wrap">
                        <label>
                           Nuevo Post<span class="req"></span>
                        </label>
                        <br>
                        <br>
                        <input type="file" id="files" name="ProfileImg" />
                        <output id="list"></output>

                        <output id="registerImg" name="images"></output>
                        <label>400x300</label>
                        <input class="radio_btn" type="radio" id="imageGran" name="size" value="gran" checked="checked" ></input>
                        <br><br>
                        <label>100x100</label>
                        <input class="radio_btn" type="radio" id="imagePetita" name="size" value="petita" ></input>
                        <br>
                    <br><br>
                    <label>
                        Privada
                    </label>
                    <span class="checkbox">
                        <input  type="checkbox" name="privada" ></input>
                    </span>
                    <br>
                    <br>
                </div>
                <button type="submit" class="button button-block" />Publicar</button>
            </form>
        </div>
        <div id="login">
        </div>
    </div><!-- tab-content -->
    </div> <!-- /form -->
    {% if  message %}
        <div class="form" id="Rl">
            <div class="tab-content">
                <div id="signup">
                    <h1>ERROR!</h1>
                    <h1>
                        Message: {{ message }}
                    </h1>
                </div>
                <div id="login">
                </div>
            </div><!-- tab-content -->
        </div>
    {% endif %}
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <script src={{ asset('indexRegistration.js', 'js') }}></script>
    <script src={{ asset('newPost.js', 'js') }}></script>

{% endblock %}