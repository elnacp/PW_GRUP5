{% extends "base.twig" %}
{% block title %} Registration {% endblock %}
{% block head %}
    {{ parent() }}
    <meta charset="UTF-8">
    <title>Sign-Up/Login Form</title>
    <link href='http://fonts.googleapis.com/css?family=Titillium+Web:400,300,600' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css">
    <link rel="stylesheet" href={{ asset('register.css', 'css') }}>
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
{% endblock %}
{% block content %}

    <div class="form" id="Rf">


        <div class="tab-content">

            <div id="signup">
                <h1>Regístrate</h1>

                <form action="/DBRegister" method="post" id="registro" enctype="multipart/form-data">

                    <div class="field-wrap">
                        <label>
                            Nombre de Usuario<span class="req">*</span>
                        </label>
                        <input type="text" id="New_nickname" name="nickname" required autocomplete="off"/>
                    </div>

                    <div class="field-wrap">
                        <label>
                            Email<span class="req">*</span>
                        </label>
                        <input type="email" id="New_email" name="email" required autocomplete="off"/>
                    </div>

                    <div class="field-wrap">
                        <label>
                            Imagen de Perfil<span class="req"></span>
                        </label>
                        <br>
                        <br>
                        <img id="profilePic" name="image" src="" class="img-thumbnail img-responsive">
                        <input type="file" id="files" name="ProfileImg">
                        <output id="registerImg" name="images"></output>

                    </div>

                    <div class="field-wrap" id="Edad">
                        <br>
                        <p class="titulo">Fecha de Nacimiento<span class="req">*</span><br></p>

                        <label>
                        </label>

                        <input type="date" id="New_edad" name="edad" required autocomplete="off"/>
                    </div>

                    <div class="field-wrap">
                        <label>
                            Contraseña<span class="req">*</span>
                        </label>
                        <input type="password" id="New_pass" name="password" required autocomplete="off"/>
                    </div>

                    <div class="field-wrap" id="repetition">
                        <label>
                            Repite la Contraseña<span class="req">*</span>
                        </label>
                        <input type="password" id="sure" name="repeat" required autocomplete="off"/>
                    </div>

                    <button type="submit" class="button button-block" id="comenzar"/>
                    Comenzar</button>

                </form>

            </div>

            <div id="login">


            </div>

        </div><!-- tab-content -->

    </div> <!-- /form -->
    {% if  message %}
        <div class="form" id="Rl">
            <div class="tab-content">
                <div id="signup">
                    <h1>REGISTRO FINALIZADO</h1>
                    <h1>
                        {{ message }}
                    </h1>
                </div>
                <div id="login">
                </div>
            </div><!-- tab-content -->
        </div>
    {% endif %}
    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>

    <script src={{ asset('indexRegistration.js', 'js') }}></script>
    <script src={{ asset('registration.js', 'js') }}></script>


{% endblock %}